<Window x:Class="POE.StepPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Step Popup" Height="250" Width="350"  WindowState="Maximized">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Step Description:" FontWeight="Bold"/>
        <TextBox x:Name="StepDescriptionTextBox" Grid.Row="1" Width="250" Height="100" Margin="5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,125,0,-25">
            <Button x:Name="OkButton" Content="OK" Width="80" Margin="10" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
    